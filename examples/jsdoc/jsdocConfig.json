{
  "tags": {
    "allowUnknownTags": true
  },
  "opts": {
    "access": "all",
    "destination": "jsDocs",
    "recurse": true,
    "sort": false
  },
  "plugins": [
    "jsdoc-plantuml"
  ],
  "source": {
    // ... wherever the source is
  },
  "templates": {
    "default": {
      "outputSourceFiles": false
    }
  },
  "plantuml": {
    "puml": {
      "create": true,
      "destination": "jsDocs/plantuml"
    },
    "images": {
      "create": true,
      "destination": "jsDocs/img",
      "defaultFormat": "png",
      "replaceWithImage": true
    }
  }
}
